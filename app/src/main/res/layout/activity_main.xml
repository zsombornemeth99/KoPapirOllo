<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_hp1"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/heart2"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:id="@+id/iv_hp2"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/heart2"
            android:layout_toRightOf="@+id/iv_hp1"/>
        <ImageView
            android:id="@+id/iv_hp3"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/heart2"
            android:layout_toRightOf="@+id/iv_hp2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_hp3"
            android:textSize="30dp"
            android:text="Gép"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Játékos"
            android:layout_toLeftOf="@+id/iv_hp4"/>
        <ImageView
            android:id="@+id/iv_hp4"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/heart2"
            android:layout_toLeftOf="@+id/iv_hp5"/>
        <ImageView
            android:id="@+id/iv_hp5"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/heart2"
            android:layout_toLeftOf="@+id/iv_hp6"/>
        <ImageView
            android:id="@+id/iv_hp6"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/heart2"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Döntetlenek száma:"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:id="@+id/tv_X"/>
        <ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginTop="15dp"
            android:src="@drawable/rock"
            android:id="@+id/iv_GepValasztasa"
            android:background="@null"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="A gép választása"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:id="@+id/iv_JatekosValasztasa"
            android:src="@drawable/rock"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="A te választásod"
            android:layout_marginTop="15dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ib_ko"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/rock"
                android:layout_marginTop="15dp"/>
            <ImageButton
                android:id="@+id/ib_papir"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/paper"
                android:layout_marginTop="15dp"/>
            <ImageButton
                android:id="@+id/ib_ollo"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/scissors"
                android:layout_marginTop="15dp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>